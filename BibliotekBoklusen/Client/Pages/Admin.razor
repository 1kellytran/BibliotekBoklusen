                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <a @onclick="ViewSeminarium">Seminarium</a>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <a @onclick="AddProducts">Lägg till seminarium</a>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <a @onclick="AddProducts">Lägg till produkter</a>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <a @onclick="HandleReturns">Hantera inlämningar</a>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

